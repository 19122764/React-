const http = require('http');
const port = 3000;

const server = http.createServer((req, res) => {
    res.writeHead(200, { 'Content-Type': 'text/plain' });
    res.end('Bem-vindo ao meu servidor Node.js!');
});

server.listen(port, () => {
    console.log(`Servidor est√° rodando em http://localhost:${port}`);
});

"scripts": {
    "start": "node index.js"
}

npm start
